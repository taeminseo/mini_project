<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="admin.shopRegister.ShopRegController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="450.0">
         <top>
            <Label prefHeight="90.0" prefWidth="171.0" text="지점 등록" BorderPane.alignment="CENTER">
               <font>
                  <Font size="38.0" />
               </font>
            </Label>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0" spacing="20.0">
                     <children>
                        <Label prefWidth="80.0" text="지점 이름" />
                        <TextField fx:id="shopNameTxt" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0" spacing="20.0">
                     <children>
                        <Label prefWidth="80.0" text="지점 아이디" />
                        <TextField fx:id="shopIdTxt" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0" spacing="20.0">
                     <children>
                        <Label prefWidth="80.0" text="지점 비밀번호" />
                        <TextField fx:id="shopPwTxt" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0" spacing="20.0">
                     <children>
                        <Label prefWidth="80.0" text="전화번호" />
                        <TextField fx:id="shopPhonNumTxt" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0" spacing="20.0">
                     <children>
                        <Label prefWidth="80.0" text="지점 위치" />
                        <TextField fx:id="shopLocationTxt" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0" spacing="20.0">
                     <children>
                        <Label prefWidth="80.0" text="대표자 이름" />
                        <TextField fx:id="shopCeoTxt" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="450.0">
                     <children>
                        <Button fx:id="shopRegisterButton" mnemonicParsing="false" onAction="#shopRegProc" prefHeight="40.0" prefWidth="80.0" text="등 록" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
